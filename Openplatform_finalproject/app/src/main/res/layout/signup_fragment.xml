<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/signupUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/signupUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/signupUserText"
        android:layout_alignBottom="@+id/signupUserText"
        android:layout_alignStart="@+id/signupMail" />

    <TextView
        android:id="@+id/signupMailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signupUserText"
        android:layout_below="@+id/signupUser"
        android:layout_marginTop="22dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/signupMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signupMailText"
        android:layout_alignBottom="@+id/signupMailText"
        android:layout_toEndOf="@+id/signupMailText"
        android:ems="7"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/signupPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signupMailText"
        android:layout_below="@+id/signupMailText"
        android:layout_marginTop="22dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/signupPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signupPasswordText"
        android:layout_alignBottom="@+id/signupPasswordText"
        android:layout_toEndOf="@+id/signupPasswordText"
        android:ems="7"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="17dp"
        android:text="@string/sign" />
</RelativeLayout>
